# Glance Configuration Editor Environment Variables
# Copy this file to .env and update with your values

# Flask session secret (generate a random string)
export SESSION_SECRET="change-me-to-random-string"

# Path to your Glance configuration file
export GLANCE_CONFIG_PATH="/opt/glance/glance.yaml"

# Directory for configuration backups
export BACKUP_DIR="/opt/glance-editor/backups"

# Admin credentials
export EDITOR_USERNAME="admin"
export EDITOR_PASSWORD="change-me-to-secure-password"